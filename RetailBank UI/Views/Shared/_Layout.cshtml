<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RetailBank_UI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/Mysite.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark navbar-survival101">
            <div class="container">
                <a class="navbar-brand font-weight-bolder" asp-action="Index">
                   SRF Bank 
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarColor02">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item active ml-3 mr-3">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item ml-auto mr-3 ml-3">
                            <a class="nav-link" asp-controller="Login" asp-action="Login">Loan</a>
                        </li>
                        <li class="nav-item ml-auto mx-3">
                            <a class="nav-link" asp-controller="Login" asp-action="Login">Banking</a>
                        </li>
                        <li class="nav-item ml-auto mx-3">
                            <a class="nav-link" asp-controller="Login" asp-action="Login" >Account</a>
                        </li>
                        <li class="nav-item ml-auto mx-3">
                            <a class="nav-link" asp-controller="Login" asp-action="Login">Offers</a>
                        </li>
                    </ul>
                    @*<form class="form-inline">
                        <div class="input-group search-box">
                            <input type="text" class="form-control" placeholder="What are you looking for?" aria-label="Search for...">
                            <span class="input-group-btn">
                                <button class="btn btn-secondary" type="button"><i class="ion-search"></i></button>
                            </span>
                        </div>
                    </form>*@
                </div>
            </div>

        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-5">
            <div style="height:40px">
                
            </div>
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted " style="background-color: #2b6dad">
        <div class="container">
            &copy; 2022 - RetailBank_UI - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
